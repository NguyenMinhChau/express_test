<div class='container mt-2'>
    <div class='row'>
        {{#each courses}}
            <div class='col-lg-4 col-sm-12 col-md-6 d-flex'>
                <div class='card mb-3 d-flex'>
                    <a href='/course/{{this.slug}}' class='mb-auto'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='{{this.title}}'
                        />
                    </a>
                    <div class='card-body d-flex flex-column flex-1'>
                        <h5 class='card-title'>{{this.title}}</h5>
                        <p class='card-text' title='{{this.description}}'>{{this.description}}</p>
                        <a
                            href='/course/{{this.slug}}'
                            class='btn btn-primary mr-auto mt-auto'
                        >
                            H·ªçc ngay
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
